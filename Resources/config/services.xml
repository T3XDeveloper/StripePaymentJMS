<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="payment.plugin.stripe_express_checkout.class">OMX\Ecommerce\StripePackage\Plugin\CheckoutPlugin</parameter>
        <parameter key="payment.stripe.api_key" />

        <parameter key="payment.stripe.gateway.class">Omnipay\Stripe\Gateway</parameter>
        <parameter key="payment.form.stripe_express_stripe_type.class">OMX\Ecommerce\StripePackage\Form\StripeType</parameter>
        <parameter key="payment.form.stripe_express_checkout_type.class">OMX\Ecommerce\StripePackage\Form\CheckoutType</parameter>
    </parameters>

    <services>
        <service id="payment.stripe.gateway" class="%payment.stripe.gateway.class%">
            <argument>null</argument>
            <argument type="service" id="request" on-invalid="null" />
            <call method="setApiKey">
                <argument>%payment.stripe.api_key%</argument>
            </call>
        </service>
        <service id="payment.plugin.stripe_express_checkout" class="%payment.plugin.stripe_express_checkout%">
            <argument type="service" id="payment.stripe.gateway" />
            <call method="setLogger">
                <argument type="service" id="monolog.logger.stripe_express_checkout" />
            </call>
            <tag name="payment.plugin" />
        </service>
        <service id="monolog.logger.stripe_express_checkout" parent="monolog.logger_prototype">
            <argument index="0">stripe_express_checkout</argument>
        </service>
    </services>
</container>